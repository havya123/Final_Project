@{
    Layout = null;
} 
 
    <tbody>
        <tr>
            <td>Email: </td>
            <th scope="row">
                <div class="input-group mb-3">
                <input type="text" class="form-control" id="emailUserChange" placeholder="Input your email" aria-label="Recipient's username" aria-describedby="basic-addon2"/>
                    <span class="input-group-text" id="basic-addon2">@@gmail.com</span>
                </div>
            </th>
        </tr>
        <tr>
            <td>Password: </td>
            <th scope="row"><input type="password" id="currentPass" class="form-control" placeholder="Input your password" aria-label="PhoneNumber"></th>
        </tr>
        <tr>
            <td>New Password: </td>
            <th scope="row"><input type="password" id="newPass" class="form-control" placeholder="Input new password" aria-label="PhoneNumber"></th>
        </tr>
        <tr>
            <td>Confirm password: </td>
            <th scope="row"> 
                    <input type="password" id="confirmPass" class="form-control" placeholder="Confirm password" aria-label="PhoneNumber">
                 
            </th>
        </tr>
        <tr>
            <td>
            <button type="button" onclick="changePass()" class="btn btn-dark">Change</button>
            </td>
        </tr>
    </tbody> 