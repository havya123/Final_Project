@{
    Layout = null;
}


<tbody>
    <tr>
        <td>Username: </td>
        <th scope="row">
            <p id ="nameUser" style="display:block"> </p>
            <input id="showInputName" type="text" style="display:none;"/>
        </th>
        <th><a onclick="showChangeName()">Change name</a></th>
    </tr>
    <tr>
        <td>Email: </td>
        <th scope="row" id="emailUser">Emails</th>
    </tr>
    <tr>
        <td>Phone Number: </td>
        <th scope="row"><input type="text" id="phoneUser" class="form-control" placeholder="Input your phone number" aria-label="PhoneNumber"></th>
    </tr>
    <tr>
        <td>Gender: </td>
        <th scope="row">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="checkedMan" checked>
                <label class="form-check-label" for="flexRadioDefault1">
                    Man
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="checkedWoman">
                <label class="form-check-label" for="flexRadioDefault2">
                    Woman
                </label>
            </div>
        </th>
    </tr>
    <tr>
        <td>Day of birth: </td>
        <th scope="row" >
            <input type="date" id="txtDOB" />
        </th>
    </tr>
    <tr>
        <td>
            <button type="submit" class="btn btn-dark" id="change-profile">Save</button>
        </td>
    </tr>
</tbody> 